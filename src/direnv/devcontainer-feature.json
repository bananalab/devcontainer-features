{
    "name": "direnv",
    "id": "direnv",
    "version": "0.1.3",
    "description": "Install and configure direnv.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "v2.32.1"
            ],
            "default": "latest",
            "description": "direnv version"
        },
        "auto_allow_workspaces": {
            "type": "boolean",
            "default": "true",
            "description": "Automatically allow direnv within /workspaces?"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "Rubymaniac.vscode-direnv"
            ]
        }
    },
    "containerEnv": {
        "DIRENV_CONFIG": "/etc"
    }
}